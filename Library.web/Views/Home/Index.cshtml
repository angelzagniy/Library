@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Library.Web.Models.ViewModels.HomePageViewModel

@inject IHtmlLocalizer<Shared> SharedLocalizer

@{
    ViewData["Title"] = Model.Title;
}

<body class="bg-light text-dark">
<div class="container mt-5">
<h1 class="text-primary text-center">@SharedLocalizer["InformationSystemLibrary"]</h1>

<h4 class="text-secondary text-center mb-10">@SharedLocalizer["ProjectInfo"]</h4>

<div class="accordion accordion-flush pb-3" id="projectDetails">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingTwo">
            <button type="button"
                    class="accordion-button collapsed"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseTwo"
                    aria-expanded="false"
                    aria-controls="collapseTwo">
                @SharedLocalizer["AboutSystem"]
            </button>
        </h2>
        <div id="collapseTwo"
             class="accordion-collapse collapse"
             aria-labelledby="headingTwo"
             data-bs-parent="#projectDetails">
            <div class="accordion-body">
                <strong>@SharedLocalizer["ProjectGoal"]</strong><br/>
                @SharedLocalizer["EmployeesRights"]
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingThree">
            <button type="button"
                    class="accordion-button collapsed"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseThree"
                    aria-expanded="false"
                    aria-controls="collapseThree">
                @SharedLocalizer["Access"]
            </button>
        </h2>
        <div id="collapseThree"
             class="accordion-collapse collapse"
             aria-labelledby="headingThree"
             data-bs-parent="#projectDetails">
            <div class="accordion-body">
                <strong>@SharedLocalizer["AccessToDataCanBeObtainedOnlyAfterAuthorization"]</strong><br/>
                @SharedLocalizer["RegistrationInfo"]<br/>
                @SharedLocalizer["AuthorizationDescription"]
                @if (!User.Identity?.IsAuthenticated ?? true)
                {
                    <p>
                        <a class="btn btn-sm btn-link" asp-controller="Home" asp-action="Login">@SharedLocalizer["Login"]</a>
                    </p>
                }
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button type="button"
                    class="accordion-button collapsed"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseOne"
                    aria-expanded="false"
                    aria-controls="collapseOne">
                @SharedLocalizer["DataModel"]
            </button>
        </h2>
        <div id="collapseOne"
             class="accordion-collapse collapse"
             aria-labelledby="headingOne"
             data-bs-parent="#projectDetails">
            <div class="accordion-body">
                <img src="images/Library.drawio.png" alt="Data model"/>
            </div>
        </div>
    </div>
</div>
</div>
</body>