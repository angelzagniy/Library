@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Library.Web.Models.ViewModels.AuthorPageViewModel

@{
    ViewData["Title"] = Model.Title;
    bool isAdmin = User.IsInRole("Admin");
}

<div class="row mb-2">
    <h2>Authors</h2>
</div>
<div class="row col-8 mb-2 align-items-center">
    @if (isAdmin)
    {
        <div class="col-12 text-end">
            <a class="btn btn-sm btn-outline-success" asp-controller="Authors" asp-action="Add">
                <span class="bi-person-add"></span>
            </a>
        </div>
    }
</div>

<div class="row col-8">
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (Author author in Model.Authors)
        {
            <tr>
                <td>@author.Name</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-success me-1"
                       asp-controller="Books" asp-action="Index" asp-route-author="@author.Name">
                        <span class="bi-book"></span>
                    </a>
                    <a class="btn btn-sm btn-outline-success me-1"
                       asp-controller="Authors" asp-action="Update" asp-route-id="@author.Id">
                        <span class="bi-pencil"></span>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>