@using Library.Web.Models.ViewModels
@model Library.Web.Models.ViewModels.AuthorPageViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="row mb-3">
    <h2>Authors</h2>
</div>
<div class="row mb-3 align-items-center">
    <div class="col">
        <a class="btn btn-sm btn-outline-success" asp-controller="Authors" asp-action="Add">Add New</a>
    </div>
</div>

<table class="table table-hover table-striped">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Author author in Model.Authors)
    {
        <tr>
            <td>@author.Id</td>
            <td>@author.Name</td>
            <td></td>
        </tr>
    }

    </tbody>
</table>