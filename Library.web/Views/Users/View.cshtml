@model Library.Web.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "User Details";
    Layout = "_Layout";
}

<div class="container">
    <div class="row mb-3">
        <h2>User Details - @Model.UserName</h2>
    </div>

    <div class="row mb-2">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label col-form-label-sm"></label>
        </div>
        <div class="col-4">
            <span class="form-control form-control-sm">@Model.Name</span>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label asp-for="Role" class="col-form-label col-form-label-sm"></label>
        </div>
        <div class="col-4">
            <span class="form-control form-control-sm">@Model.Role</span>
        </div>
    </div>
    <div class="row">
        <div class="col-6 g-2 text-end">
            <a class="btn btn-sm btn-secondary" asp-action="Index">Close</a>
        </div>
    </div>
</div>