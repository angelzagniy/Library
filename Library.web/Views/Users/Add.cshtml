@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Library.Web.Models.ViewModels.AddUserViewModel

@{
    ViewData["Title"] = "Add User";
}

<div class="container">
    <div class="row mb-3">
        <h2>Add User</h2>
    </div>

    <form method="post" asp-action="Add" class="g-2">
        <div class="row mb-2">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label col-form-label-sm"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control form-control-sm">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <label asp-for="UserName" class="col-form-label col-form-label-sm"></label>
            </div>
            <div class="col-4">
                <input asp-for="UserName" class="form-control form-control-sm">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <label asp-for="Password" class="col-form-label col-form-label-sm"></label>
            </div>
            <div class="col-4">
                <input asp-for="Password" type="password" class="form-control form-control-sm">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <label asp-for="RepeatPassword" class="col-form-label col-form-label-sm"></label>
            </div>
            <div class="col-4">
                <input asp-for="RepeatPassword" type="password" class="form-control form-control-sm">
                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <label asp-for="Role" class="col-form-label col-form-label-sm"></label>
            </div>
            <div class="col-4">
                <select id="roleSelect" name="Role" class="form-select form-select-sm"
                        asp-for="Role"
                        asp-items="Model.Roles">
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-6 g-2 text-end">
                <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                <a class="btn btn-sm btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>