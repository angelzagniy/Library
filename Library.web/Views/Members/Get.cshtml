@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Member

@inject IHtmlLocalizer<Shared> SharedLocalizer

<div class="container">
    <div class="row mb-3">
        <h2 class="text-primary">@SharedLocalizer["Manage Book"]</h2>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <span class="col-form-label col-form-label-sm">ID</span>
        </div>
        <div class="col-4">
            <span class="">@Model.Id</span>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <span class="col-form-label col-form-label-sm">@SharedLocalizer["Name"]</span>
        </div>
        <div class="col-4">
            <span class="">@Model.Name</span>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <span class="col-form-label col-form-label-sm">@SharedLocalizer["PhoneNumber"]</span>
        </div>
        <div class="col-4">
            <span class="">@Model.PhoneNumber</span>
        </div>
    </div>

    <div class="row mb-2 mt-2">
        <h4 class="text-primary">@SharedLocalizer["Taken Books"]</h4>
    </div>
    @foreach (BookInstance instance in Model.BookInstances)
    {
        <div class="row mb-2">
            <div class="col-3">
                <span class="col-form-label col-form-label-sm">S/N: @instance.Id</span>
            </div>
            <div class="col-4">
                <span class="text-dark">
                    <b>@instance.Book.Title</b> (@instance.Book.Author.Name)
                </span>
            </div>
            <div class="col-1 text-end">
                <a class="btn btn-sm btn-outline-primary"
                   asp-action="ReturnBook" asp-route-id="@instance.Id">
                    @SharedLocalizer["Return"]
                </a>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-8 g-2 text-end">
            <a class="btn btn-sm btn-secondary" asp-action="Index">@SharedLocalizer["Back to members"]</a>
        </div>
    </div>
</div>