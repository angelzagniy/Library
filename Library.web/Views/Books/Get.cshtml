@model Book

@{
    ViewData["Title"] = "Book Info";
}

<div class="container">
    <div class="row mb-3">
        <h2>Manage Book</h2>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <span class="col-form-label col-form-label-sm">ISBN</span>
        </div>
        <div class="col-4">
            <span class="text-info">@Model.ISBN</span>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <span class="col-form-label col-form-label-sm">Title</span>
        </div>
        <div class="col-4">
            <span class="">@Model.Title</span>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <span class="col-form-label col-form-label-sm">Genre</span>
        </div>
        <div class="col-4">
            <span class="">@Html.ValueFor(m => Model.Genre)</span>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <span class="col-sm-2 col-form-label col-form-label-sm">Author</span>
        </div>
        <div class="col-4">
            <span class="">@Model.Author.Name</span>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <span class="col-form-label col-form-label-sm">Year</span>
        </div>
        <div class="col-4">
            <span class="text-dark">@Model.Year</span>
        </div>
    </div>

    <div class="row mb-2 mt-2">
        <h4>Instances</h4>
    </div>

    <div class="row mb-2">
        <div class="col-8">
            <table class="table table-secondary table-hover table-striped">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Taken By</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                @foreach (BookInstance instance in Model.BookInstances)
                {
                    <tr>
                        <td>
                            <span class="col-form-label col-form-label-sm">@instance.Id</span>
                        </td>
                        <td>
                            @if (instance.Member != null)
                            {
                                <span class="text-dark">
                                    Taken by
                                    <a asp-controller="Members" asp-action="Get" asp-route-id="@instance.MemberId">@instance.Member.Name</a>
                                </span>
                            }
                            else
                            {
                                <span class="text-dark">
                                    <i>Available</i>
                                </span>
                            }
                        </td>
                        <td>
                            @if (instance.Member != null)
                            {
                                <a class="btn btn-sm btn-primary"
                                   asp-action="Release" asp-route-id="@instance.Id">
                                    Release
                                </a>
                            }
                        </td>
                    </tr>
                }

                </tbody>
            </table>
        </div>

    </div>
    <div class="row">
        <div class="col-8 g-2 text-end">
            <a class="btn btn-sm btn-secondary" asp-action="Index">Back to books</a>
        </div>
    </div>
</div>