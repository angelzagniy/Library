@model Library.Web.Models.ViewModels.AddBookViewModel

@{
    ViewData["Title"] = "Add Book";
}

<div class="container">
    <form method="post" asp-action="Add" class="g-2">
        <div class="row mb-2">
            <div class="col-2">
                <label asp-for="ISBN" class="col-form-label col-form-label-sm"></label>
            </div>
            <div class="col-auto">
                <input asp-for="ISBN" required class="form-control form-control-sm">
            </div>
            <div class="col-auto">
                <label asp-for="InstancesCount" class="col-form-label col-form-label-sm"></label>
            </div>
            <div class="col-auto">
                <input asp-for="InstancesCount" required class="form-control form-control-sm">
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <label asp-for="Title" class="col-form-label col-form-label-sm"></label>
            </div>
            <div class="col-4">
                <input asp-for="Title" class="form-control form-control-sm">
            </div>
            <div class="col-auto">
                <label asp-for="Genre" class="col-form-label col-form-label-sm"></label>
            </div>
            <div class="col-auto">
                <select class="form-select form-select-sm"
                        asp-for="Genre"
                        asp-items="Html.GetEnumSelectList<Genre>()">
                </select>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <label asp-for="AuthorId" class="col-sm-2 col-form-label col-form-label-sm"></label>
            </div>
            <div class="col-auto">
                <select asp-for="AuthorId" asp-items="@Model.Authors"
                        class="form-select form-control-sm"
                        value="@Model.Authors">
                    <option selected>Select author</option>
                </select>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <label asp-for="Year" class="col-form-label col-form-label-sm"></label>
            </div>
            <div class="col-auto">
                <input asp-for="Year" required class="form-control form-control-sm">
            </div>
        </div>

        <div class="row">
            <div class="col-auto text-end">
                <button type="submit" class="btn btn-sm btn-info">Submit</button>
            </div>
        </div>
    </form>
</div>